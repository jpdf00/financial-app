<div class="new-bg-grey height-full">
  <div class="card mt-3 mx-2 flex-row p-2  mb-3">
    <div class="align-self-start">
      <%= tag.img src: @group.icon, class: 'square-big' %>
    </div>
    <div class="mx-2 d-flex flex-column justify-content-between w-100">
      <div class="d-flex w-100 justify-content-between align-items-center pt-1 fs-5">
        <p class="text-black-50"><%= @group.name %></p>
      </div>
      <small class="text-black-50 align-self-start">
        <%= @group.created_at.strftime("%d %B %Y") %>
      </small>
    </div>
  </div>

  <% @group.payments.includes(:author).each do |payment| %>
    <div class="card mx-2 flex-row p-2">
      <div class="mx-2 d-flex flex-column justify-content-between w-100">
        <div class="d-flex w-100 justify-content-center align-items-center pt-1 fs-5">
          <p class="fw-bold text-black-50"><%= payment.name %></p>
        </div>
        <div class="d-flex text-black-50 align-self-start justify-content-between w-100">
          <small><%= payment.author.name %></small>
          <small><%= payment.created_at.strftime("%d %B %Y") %></small>
        </div>
      </div>
    </div>
  <% end %>

  <%= link_to 'Edit', edit_group_path(@group) %> |
  <%= link_to 'Destroy', @group, method: :delete, data: { confirm: 'Are you sure?' } %> |
  <%= link_to 'Back', groups_path %> |
  <%= link_to 'Home', root_path %>

</div>
