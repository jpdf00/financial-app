<div class="container-fluid new-bg-grey height-full">
  <div class="card mt-3 mx-2 flex-row p-2  mb-3">
    <div class="align-self-start">
      <%= tag.img src: @group.icon, class: 'square-big' %>
    </div>
    <div class="mx-2 d-flex flex-column justify-content-between w-100">
      <div class="d-flex w-100 justify-content-between align-items-center pt-1 fs-5">
        <p class="text-black-50"><%= @group.name %></p>
      </div>
      <small class="text-black-50 align-self-start">
        <%= @group.created_at.strftime("%d %B %Y") %>
      </small>
    </div>
  </div>

  <%= show_payments(@group) %>

  <div class="fixed-bottom d-flex w-100 flex-column">
    <%= button_to 'Edit Category', edit_group_path(@group), method: :get, class: 'w-100 btn-height new-bg-green text-white rounded-top border-none fs-5' %>
    <%= button_to 'Destroy Category', @group, method: :delete, data: { confirm: 'Are you sure?' }, class: 'w-100 btn-height new-bg-green text-white rounded-top border-none fs-5' %>
  </div>
</div>
