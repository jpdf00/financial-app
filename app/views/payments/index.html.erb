<p id="notice"><%= notice %></p>

<h1>Grouped Payments</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"><%= @total_amout %></th>
    </tr>
  </thead>

  <tbody>
    <% @payments.each do |payment| %>
      <tr>
        <td><%= link_to "#{tag.img src: payment.groups.first.icon} #{payment.name} $ #{payment.amount} #{payment.created_at.strftime("%d %B %Y")}", payment %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

