<div class="container-fluid new-bg-grey height-scroll px-0">
  <div class="card">
    <div class="card-body d-flex justify-content-between align-items-center p-2">
      <h2 class="fs-6 m-0 p-0 text-black-50">Total Spent</h2>
      <p class="m-0 p-0 fw-bold">$<%= @total_amount %></p>
    </div>
  </div>
  <%= render @payments %>
  <div class="btn-height pb-5 pt-5"></div>

  <%= button_to 'Add Expense', new_payment_path, method: :get, class: 'fixed-bottom w-100 btn-height new-bg-green text-white rounded-top border-none fs-5 mt-5' %>
</div>
