<div class="new-bg-grey height-full">
  <div class="card mt-3 mx-2 flex-row p-2">
    <%= show_icon(@payment) %>
    <div class="mx-2 d-flex flex-column justify-content-between w-100">
      <div class="d-flex w-100 justify-content-between align-items-center pt-1 fs-5">
        <p class="text-black-50"><%= @payment.name %></p>
        <p class="fs-bold text-dark">$<%= @payment.amount %></p>
      </div>
      <small class="text-black-50 align-self-start">
        <%= @payment.created_at.strftime("%d %B %Y") %>
      </small>
    </div>
  </div>

  <div class="d-flex flex-column mt-3">
    <%= group_btns(@groups, @payment) %>
  </div>

  <div class="fixed-bottom d-flex w-100 flex-column">
    <%= button_to 'Edit Expense', edit_payment_path(@payment), method: :get, class: 'w-100 btn-height new-bg-green text-white rounded-top border-none fs-5' %>
    <%= button_to 'Destroy Expense', @payment, method: :delete, data: { confirm: 'Are you sure?' }, class: 'w-100 btn-height new-bg-green text-white rounded-top border-none fs-5' %>
  </div>
</div>
